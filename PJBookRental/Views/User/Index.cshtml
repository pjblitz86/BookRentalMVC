@model IEnumerable<PJBookRental.ViewModel.UserViewModel>
@using PJBookRental.Models

@{
    ViewBag.Title = "Index";
}

<h2>Manage Users</h2>

<br />
<br />
<table class="table table-condensed table-hover">
    <tr class="table-header">
        <th>
            @Html.DisplayNameFor(m => m.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Email)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Disable)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(m => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            @Html.DisplayFor(m => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(m => item.BirthDate)
        </td>
        <td>
            @Html.CheckBoxFor(m => item.Disable, new { @class= "disabled"})
        </td>
        <td>
            @Html.Partial("_TableButtonPartial",
                          new IndividualButtonPartial { UserId = item.Id})
        </td>
    </tr>
    }

</table>


